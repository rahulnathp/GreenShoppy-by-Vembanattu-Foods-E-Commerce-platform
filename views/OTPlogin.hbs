<section class="vh-auto">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-auto">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="/images/Vembanattu.JPG"
                                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form action="/otplogin" method="post">

                                    <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">OTP Login</h3>
                                    {{#if loginErr}}
                                    <p class="error fs-4 text-danger">{{loginErr}}</p>
                                    {{/if}}
                                    <div class="form-outline mb-4">
                                        <input type="text" id="form2Example17" name="number"
                                            class="form-control form-control-lg" placeholder="Enter Number" />
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block" type="submit">Send OTP</button>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>